<h1>Receptionist Portal</h1>

<table>
  <tr>
    <th>Visit date</th>
    <th>Pet</th>
    <th>Customer</th>
    <th>Reminder</th>
    <th>Reason for visit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.visit_date.strftime("%m/%d/%y %H:%M") %></td>
    <td><%= appointment.pet.name if appointment.pet_id %></td>
    <td><%= appointment.customer.name if appointment.customer_id %></td>
    <td><%= appointment.reminder %></td>
    <td><%= appointment.reason_for_visit %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

